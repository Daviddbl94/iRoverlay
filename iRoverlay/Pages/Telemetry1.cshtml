@page
@model iRoverlay.Pages.Telemetry1Model
@{
    ViewData["Title"] = "Home page";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/5.0.7/signalr.min.js"></script>
</head>
<body>
    <h1>Telemetry Dashboard</h1>
    <div id="telemetryData"></div>

    <script>
        var connection = new signalR.HubConnectionBuilder()
            .withUrl("/telemetryHub")
            .build();

        connection.on("ReceiveTelemetryData", function(telemetryData) {
            // Actualiza la interfaz de usuario con los nuevos datos de telemetría recibidos
            document.getElementById("telemetryData").innerHTML = JSON.stringify(telemetryData);
        });

        connection.start()
            .then(function () {
                console.log("Conexión establecida con el servidor de SignalR");
            })
            .catch(function (err) {
                console.error(err.toString());
            });
    </script>
</body>
</html>

